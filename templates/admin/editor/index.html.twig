{% extends 'base.html.twig' %}

{% block title %}Administration - Editeurs{% endblock %}

{% block body %}
    <div class="bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <style>
                        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
                        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
                    </style>
                    <div class="example-wrapper">
                        <h1>Liste d'Editeurs</h1>
                        <ul class="list-group list-group-flush">
                            {% for editor in pager %}
                                <div class="card mb-1">
                                    <div class="card-body">
                                        <div class="card-title d-flex justify-content-between">
                                            <a href="{{ path('app_admin_editor_show', {'id':editor.id}) }}">
                                                <h4 class="mb-1">{{ editor.name|capitalize }}</h4>
                                            </a>
                                            <small class="text-muted">Identifiant : {{ editor.id }}</small>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </ul>

                        {{ pagerfanta(pager, {'omitFirstPage': true}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
